{% extends "core/base.jinja" %}
{% from 'core/macros.jinja' import user_profile_link, select_all_checkbox %}

{%- block additional_css -%}
  <link rel="stylesheet" href="{{ static('club/css/members.scss') }}">
{%- endblock -%}

{% block content %}
  <h2>{% trans %}Club members{% endtrans %}</h2>
  <form class="add-members" action="{{ url('club:club_members', club_id=club.id) }}" id="add_users" method="post">
    {% csrf_token %}
    {{ form.non_field_errors() }}
    <div>
      <label for="{{ form.users.id_for_label }}">{{ form.users.label }} :</label>
      {{ form.users }}
      {{ form.users.errors }}
      <span class="helptext">{{ form.users.help_text }}</span>
    </div>
    <div>
      <label for="{{ form.role.id_for_label }}">{{ form.role.label }} :</label>
      {{ form.role }}
      {{ form.role.errors }}
    </div>
    <div>
      <label for="{{ form.description.id_for_label }}">{{ form.description.label }} :</label>
      {{ form.description }}
      {{ form.description.errors }}
    </div>
    {% if form.start_date %}
      <div>
        <label for="{{ form.start_date.id_for_label }}">{{ form.start_date.label }} :</label>
        {{ form.start_date }}
        {{ form.start_date.errors }}
      </div>
    {% endif %}
    <div><input type="submit" value="{% trans %}Add{% endtrans %}" /></div>
  </form>
  {% if members %}
    <form action="{{ url('club:club_members', club_id=club.id) }}" id="users_old" method="post">
      {% csrf_token %}
      {% set users_old = dict(form.users_old | groupby("choice_label")) %}
      {% if users_old %}
        {{ select_all_checkbox("users_old") }}
        <p></p>
      {% endif %}
      <table id="club_members_table" class="members-table">
        <thead>
          <tr>
            <td>{% trans %}User{% endtrans %}</td>
            <td>{% trans %}Role{% endtrans %}</td>
            <td>{% trans %}Description{% endtrans %}</td>
            <td>{% trans %}Since{% endtrans %}</td>
            {% if users_old %}
              <td>{% trans %}Mark as old{% endtrans %}</td>
            {% endif %}
          </tr>
        </thead>
        <tbody>
          {% for m in members %}
            <tr>
              <td>{{ user_profile_link(m.user) }}</td>
              <td>{{ settings.SITH_CLUB_ROLES[m.role] }}</td>
              <td>{{ m.description }}</td>
              <td>{{ m.start_date }}</td>
              {% if users_old %}
                <td>
                  {% set user_old = users_old[m.user.get_display_name()] %}
                  {% if user_old %}
                    {{ user_old[0].tag() }}
                  {% endif %}
                </td>
              {% endif %}
            </tr>
          {% endfor %}
        </tbody>
      </table>
      {{ form.users_old.errors }}
      {% if users_old %}
        <input type="submit" name="submit" value="{% trans %}Mark as old{% endtrans %}">
      {% endif %}
    </form>
  {% else %}
    <p>{% trans %}There are no members in this club.{% endtrans %}</p>
  {% endif %}
{% endblock %}
