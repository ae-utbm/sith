{% extends "core/page/base.jinja" %}

{% block page %}
  <h2>{% trans %}Edit page{% endtrans %}</h2>
  <form action="{{ url('core:page_edit', page_name=page.get_full_name()) }}" method="post">
    {% csrf_token %}
    {{ form.as_p() }}
    <p><input type="submit" value="{% trans %}Save{% endtrans %}" /></p>
  </form>
{% endblock %}



